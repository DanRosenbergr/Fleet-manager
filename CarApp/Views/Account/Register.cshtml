@model CarApp.ViewModels.RegisterViewModel

<div class="container d-flex justify-content-center">
    <div class="input-frame">
        <div class="d-flex flex-column align-content-center">
            <h5>Sign in</h5>

            <form asp-action="Register" method="post" autocomplete="off">
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="UserName"></label>
                    <input asp-for="UserName" class="form-control mb-3" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" class="form-control mb-3" type="password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ConfirmPassword"></label>
                    <input asp-for="ConfirmPassword" class="form-control mb-3" type="password" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-gradient w-100 mt-4">Sign-in</button>
            </form>
        </div>
    </div>    
</div>


@model CarApp.ViewModels.RegisterViewModel

<div class="container d-flex justify-content-center my-3">
    <div class="input-frame position-relative">
        <div class="d-flex flex-column align-content-center">
            <h3 class="text-center">Sign in</h3>            
            <a asp-controller="Home" asp-action="Index" class="position-absolute top-0 end-0 m-2 text-light fs-4" title="Back">
                <i class="bi bi-x-lg"></i>
            </a>
            <form asp-action="Register" method="post" autocomplete="off">
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="UserName"></label>
                    <input asp-for="UserName" class="form-control mb-3" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" class="form-control mb-3" type="password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ConfirmPassword"></label>
                    <input asp-for="ConfirmPassword" class="form-control mb-3" type="password" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-gradient btn-aqua w-100 mt-4">Sign-in</button>
            </form>
        </div>
    </div>    
</div>


@using CarApp.DTO

@model TripLogDTO
@if (User.Identity.IsAuthenticated)
{
	<div class="container d-flex justify-content-center my-3">
		<div class="col-4 myFrame">
			<h4>Edit Trip</h4>
		
				<form asp-action="Edit" method="post">

					<input type="hidden" asp-for="Id" /> 
					<input type="hidden" asp-for="CarId" /> 

					<div class="mb-3">
						<label asp-for="StartDate" class="form-label"></label>
						<input type="date" asp-for="StartDate" class="form-control" />
					</div>
					<div class="mb-3">
						<label asp-for="EndDate" class="form-label"></label>
						<input type="date" asp-for="EndDate" class="form-control" />
					</div>
					<div class="mb-3">
						<label asp-for="DistanceKm" class="form-label"></label>
						<input asp-for="DistanceKm" class="form-control" />
					</div>				
					<div class="mb-3">
						<label asp-for="Purpose" class="form-label"></label>
						<input asp-for="Purpose" class="form-control" />
					</div>

					<div class="d-flex gap-2">
						<input class="btn btn-gradient text-success" type="submit" value="Update" />
						<a class="btn btn-gradient" asp-controller="Cars" asp-action="Details" asp-route-id="@Model.CarId">Back to list</a>
					</div>
				</form>
			</div>
		
	</div>
}




@using CarApp.DTO

@model CarDTO
@if (User.Identity.IsAuthenticated)
{
	<div class="container d-flex justify-content-center my-3">
		<div class="col-12 col-md-8 col-xl-4 myFrame position-relative">
			<a asp-controller="Cars" asp-action="Index" class="position-absolute top-0 end-0 m-2 text-light fs-4" title="Back">
				<i class="bi bi-x-lg"></i>
			</a>
			<h3 class="text-center">Edit Car</h3>
			<form asp-action="Edit" method="post" asp-controller="Cars">
				<input type="hidden" asp-for="Id" />
				<div class="mb-2">
					<label asp-for="Brand" class="form-label"></label>
					<input asp-for="Brand" class="form-control" />
				</div>
				<div class="mb-2">
					<label asp-for="Model" class="form-label"></label>
					<input asp-for="Model" class="form-control" />
				</div>
				<div class="mb-2">
					<label asp-for="Year" class="form-label">Year of manufacture:</label>
					<input asp-for="Year" class="form-control" />
				</div>
				<div class="mb-2">
					<label asp-for="Color" class="form-label">Color:</label>
					<input asp-for="Color" class="form-control" />
				</div>
				<div class="mb-2">
					<label asp-for="LicensePlate" class="form-label">License plate:</label>
					<input asp-for="LicensePlate" class="form-control" />
				</div>
				<div class="mb-2">
					<label asp-for="Mileage" class="form-label">Current mileage:</label>
					<input asp-for="Mileage" class="form-control" />
				</div>
				<div class="mb-2">
					<label asp-for="Fuel" class="form-label">Fuel type:</label>
					<select asp-for="Fuel" class="form-control" asp-items="ViewBag.FuelTypes"></select>
				</div>
				<div class="mb-2">
					<label asp-for="NextMOT" class="form-label">Next MOT:</label>
					<input asp-for="NextMOT" type="date" class="form-control" />
				</div>
				<div class="d-flex justify-content-between">
					<input class="btn btn-gradient text-success" type="submit" value="Update" />
					<a class="btn btn-gradient" asp-action="Index">Back to list</a>
				</div>
			</form>
		</div>
	</div>
		
}


